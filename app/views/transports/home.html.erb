        <% transport.photos.each do |photo| %>
            <%= cl_image_tag photo.key %>
        <% end %>
      <% else %>
        <%= 'No Image' %>
      <% end %>
        <p>Mod√®le : <%= transport.brand%></p>
        <p>Year : <%= transport.year %></p>
        <p>Prix :<%= transport.price %> $</p>
        <%= link_to 'Book now', new_transport_booking_path(transport), class: 'nav-link' %>
