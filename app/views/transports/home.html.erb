<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dojiqdbe4/image/upload/v1677600746/diable1_wubyti.png);">
  <div class="container">
    <p><span class='text-align-center' data-controller="typed-js"></span></p>
  </div>
</div>

<div class="containers">
  <% if user_signed_in? %>
    <div class="btn-home"><a><%= link_to "LOG OUT", destroy_user_session_path, data: {turbo_method: :delete} %></a></div>
  <% else %>
    <div class="btn-home"><a><%= link_to 'SIGN IN', new_user_session_path %></a></div>
    <div class="btn-home"><a><%= link_to "SIGN UP",  new_user_registration_path %></a></div>
  <% end %>
</div>

<div class="container">
  <div class="cards-container">
    <% @transports.each do |transport| %>
      <div class="card">

        <% if transport.photos.attached? %>
          <% transport.photos.each do |photo| %>
              <%= cl_image_tag photo.key %>
          <% end %>
        <% else %>
        <%= 'No Image' %>
        <% end %>
        <div class="card-details">
          <h1><%= transport.brand %></h1>
          <p>Year : <%= transport.year %></p>
          <h2>Prix : <%= transport.price %> $</h2>
          <%= link_to 'Details', transport_path(transport.id), class: 'shadow__btn' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
